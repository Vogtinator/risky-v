/dts-v1/;
/ {
	compatible = "suse,risky-v";
	model = "RISKY-V Emulator";
	#address-cells = <1>;
	#size-cells = <1>;

	cpus: cpus {
		#address-cells = <1>;
		#size-cells = <0>;
		cpu0: cpu@0 {
			reg = <0>;
			device_type = "cpu";
			compatible = "riscv";
			riscv,isa = "rv32ia";
			riscv,isa-base = "rv32i";
			riscv,isa-extensions = "i", "a";

			cpu0_intc: interrupt-controller {
				#interrupt-cells = <1>;
				compatible = "riscv,cpu-intc";
				interrupt-controller;
			};
		};
	};

	memory@1000 {
		device_type = "memory";
		reg = <0x1000 0x3f000>;
	};
};
